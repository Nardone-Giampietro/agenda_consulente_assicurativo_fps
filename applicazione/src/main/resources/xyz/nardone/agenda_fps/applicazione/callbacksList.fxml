<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="xyz.nardone.agenda_fps.applicazione.controllers.CallbacksListController"
            stylesheets="@stiles.css" prefHeight="1000">

    <!-- Side Navigation -->
    <left>
        <fx:include source="navigator.fxml"/>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20.0" prefWidth="1000.0">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            <children>
                <!-- Header Section -->
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Callbacks" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                        <Label text="Lista" style="-fx-font-size: 14px; -fx-text-fill: gray;"/>
                    </children>
                </HBox>

                <!-- Filter and Table Section -->
                <VBox spacing="10.0" VBox.vgrow="ALWAYS">

                    <!-- TableView and Dashboard Button Section -->
                    <VBox spacing="10.0" alignment="CENTER" VBox.vgrow="ALWAYS">
                        <children>

                            <!-- TableView Container -->
                            <VBox VBox.vgrow="ALWAYS" fx:id="tableContainer">
                                <TableView fx:id="callbacksTable" styleClass="table-view" VBox.vgrow="ALWAYS">
                                    <contextMenu>
                                        <ContextMenu fx:id="contextMenu" styleClass="context-menu">
                                            <items>
                                                <MenuItem fx:id="menuItem" mnemonicParsing="false" onAction="#remove" text="Rimuovi" styleClass="menu-item"/>
                                                <MenuItem fx:id="menuItemUpdate" mnemonicParsing="false" onAction="#switchToCallbackUpdate" text="Modifica" styleClass="menu-item"/>
                                            </items>
                                        </ContextMenu>
                                    </contextMenu>
                                    <placeholder>
                                        <Label text="Nessun callback trovato" style="-fx-text-fill: gray; -fx-font-style: italic;"/>
                                    </placeholder>
                                </TableView>
                            </VBox>

                            <!-- Centered Dashboard Button -->
                            <Text fx:id="infoText" textAlignment="CENTER" />
                            <HBox alignment="CENTER" spacing="10.0">
                                <Button fx:id="dashboardButton" mnemonicParsing="false" onAction="#switchToDashboard" text="Dashboard" styleClass="action-button"/>
                                <Button fx:id="addAppointmentButton" mnemonicParsing="false" onAction="#switchToAddAppointment" text="Aggiungi Appuntamento" styleClass="action-button"/>
                            </HBox>
                        </children>
                    </VBox>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
