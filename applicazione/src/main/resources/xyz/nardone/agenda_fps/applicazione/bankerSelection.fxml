<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.text.TextFlow?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="xyz.nardone.agenda_fps.applicazione.controllers.BankerSelectionController"
            stylesheets="@stiles.css" prefHeight="580">
    <!-- Side Navigation -->
    <left>
        <fx:include source="navigator.fxml"/>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20.0" prefWidth="600.0" alignment="CENTER">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            <children>
                <!-- Header Section -->
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Family Banker" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                        <Label text="Seleziona" style="-fx-font-size: 14px; -fx-text-fill: gray;"/>
                    </children>
                </HBox>

                <!-- Form layout -->
                <VBox alignment="CENTER" spacing="15.0" styleClass="filter-container" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0"
                      AnchorPane.topAnchor="70.0">
                    <children>
                        <!-- Family Banker selection -->
                        <HBox alignment="CENTER" spacing="10.0">
                            <Label text="Seleziona Family Banker*:" styleClass="filter-label" minWidth="180"/>
                            <ComboBox fx:id="bankerComboBox" promptText="Seleziona" onAction="#bankerSelectedAction" prefWidth="250.0" styleClass="filter-input"/>
                        </HBox>

                        <!-- Appointment dates -->
                        <HBox alignment="CENTER" spacing="10.0">
                            <Label text="Data Inizio (opzionale):"  styleClass="filter-label" minWidth="180"/>
                            <DatePicker fx:id="datePickerStart" promptText="Inizio" editable="false" prefWidth="250.0" styleClass="filter-input"/>
                        </HBox>
                        <HBox alignment="CENTER" spacing="10.0">
                            <Label text="Data Fine (opzionale):" styleClass="filter-label" minWidth="180"/>
                            <DatePicker fx:id="datePickerEnd" promptText="Fine" editable="false" prefWidth="250.0" styleClass="filter-input"/>
                        </HBox>

                        <!-- Annotation Section -->
                        <VBox spacing="5.0" maxWidth="500">
                            <Text text="NOTA:" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: gray;"/>
                            <Text text="Le date sono opzionali e funzionano in questo modo:" style="-fx-font-size: 14px; -fx-text-fill: gray;"/>

                            <Text text="- Selezione di entrambe: " style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: gray;"/>
                            <Text text="Statistiche per quell'intervallo di date." style="-fx-font-size: 14px; -fx-text-fill: gray;"/>

                            <Text text="- Selezione soltanto di Data Inizio: " style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: gray;"/>
                            <Text text="Statistiche dalla data di inizio fino ad ora." style="-fx-font-size: 14px; -fx-text-fill: gray;"/>

                            <Text text="- Selezione soltanto di Data Fine: " style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: gray;"/>
                            <Text text="Statistiche da sempre fino alla data di fine." style="-fx-font-size: 14px; -fx-text-fill: gray;"/>

                            <Text text="- Nessuna selezione: " style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: gray;"/>
                            <Text text="Statistiche totali." style="-fx-font-size: 14px; -fx-text-fill: gray;"/>
                        </VBox>

                        <!-- Centered Dashboard Button -->
                        <Text fx:id="infoText" textAlignment="CENTER"/>
                        <HBox alignment="CENTER" spacing="10.0">
                            <Button fx:id="dashboardButton" mnemonicParsing="false" onAction="#switchToDashboard" text="Dashboard" styleClass="action-button"/>
                            <Button fx:id="nextButton" mnemonicParsing="false" onAction="#nextAction" text="Avanti" styleClass="action-button"/>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>

</BorderPane>
